model LeaderboardEntry {
  id            Int         @id @default(autoincrement())
  rank          Int
  team          String
  wins          Int         @default(0)
  losses        Int         @default(0)
  notes         String      @default("")
  
  competitionId Int
  competition   Competition @relation(fields: [competitionId], references: [id], onDelete: Cascade)
}

model ScheduleItem {
  id            Int         @id @default(autoincrement())
  day           String
  time          String
  match         String
  status        String      @default("Upcoming")
  
  competitionId Int
  competition   Competition @relation(fields: [competitionId], references: [id], onDelete: Cascade)
}

model ContactPerson {
  id            Int         @id @default(autoincrement())
  name          String
  phone         String
  
  competitionId Int
  competition   Competition @relation(fields: [competitionId], references: [id], onDelete: Cascade)
}
model Registration {
  id            Int         @id @default(autoincrement())
  name          String
  class         String
  teamName      String
  phone         String
  competitionId Int
  competition   Competition @relation(fields: [competitionId], references: [id], onDelete: Cascade)
  createdAt     DateTime    @default(now())
}
