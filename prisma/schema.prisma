generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DayRoute {
  day       String   @id @unique // "selasa", "rabu", etc.
  url       String
  updatedAt DateTime @updatedAt
}

model Competition {
  id           Int                @id @default(autoincrement())
  title        String
  icon         String
  color        String
  bracketType  String             @default("single") // "single", "double"
  
  // JSON fields for complex nested array structures
  grandFinal   Json?              @default("{}") // Object with matches array
  bracket      Json?              @default("[]") // Array of rounds (Single bracket)
  bracketLeft  Json?              @default("[]") // Array of rounds (Double bracket)
  bracketRight Json?              @default("[]") // Array of rounds (Double bracket)
  
  // Relations
  leaderboard  LeaderboardEntry[]
  schedule     ScheduleItem[]
  cps          ContactPerson[]

  
  rulesList    String[]           @map("rules") // Using scalar list for simple string array
  
  registrations Registration[]
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
}

